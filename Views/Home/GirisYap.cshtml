@model KullaniciGirisModel


<form asp-action="GirisYap" method="post" class="p-4 w-50 mx-auto">
    <div class="form-group">
        <label>Kullanıcı Adı: </label>
        <input type="text" asp-for="@Model.KullaniciAd" class="form-control"/>
    </div>
    <div class="form-group">
        <label>Şifre: </label>
        <input type="text" asp-for="@Model.Sifre" class="form-control" />
    </div>
    <div class="form-check">
    <input type="checkbox" asp-for="@Model.BeniHatirla"class="form-check-input" />
        <label asp-for="BeniHatirla" class="form-check-label"> Beni Hatırla</label>
    </div>
    <br />
    <div class="form-group">
        <button type="submit" class="btn btn-block btn-info">Giriş Yap</button>
    </div>
    
</form>