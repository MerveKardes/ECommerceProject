@model List<Urun>

<a asp-action="Ekle" asp-controller="Home" asp-area="Admin" class="btn btn-primary btn-sm my-2">Ekle</a>

<table class="table table-sm table-bordered table-hover mt-2">
    <tr>
       <th>Id</th>
       <th>Resim</th>
       <th>Ad</th>
       <th>Fiyat</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Resim</td>
            <td>@item.Ad</td>
            <td>@item.Fiyat</td>
            
            <td>
            <a asp-action="Guncelle" asp-controller="Home" asp-area="Admin"
                asp-route-id="@item.Id" class="btn btn-warning btn-sm">Güncelle</a>
            </td>
            
            
        </tr>

    }
</table>
