@model UrunEkleModel

<form asp-action="Ekle" asp-controller="Home" asp-area="Admin" method="post"
      class="w-75 mx-auto p-3" enctype="multipart/form-data">
    <div class="form-group">
        <label>Ürünün adı:</label>
        <span asp-validation-for="@Model.Ad" class="text-danger"></span>
        <input asp-for="@Model.Ad" class="form-control" />
    </div>

    <div class="form-group">
        <label>Ürünün fiyatı:</label>
        <span asp-validation-for="@Model.Fiyat" class="text-danger"></span>
        <input asp-for="@Model.Fiyat" class="form-control" />
    </div>

    <div class="form-group">
        <label>Ürünün resmi:</label>
        <input type="file" asp-for="@Model.Resim" class="form-control-file" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
</form>

@section JavaScript{
    <script src="~/jqueryValid/jquery.validate.min.js"></script>
    <script src="~/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}