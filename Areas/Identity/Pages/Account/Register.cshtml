@page
@model RegisterModel


<div class="row " >
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto shadow-lg p-3 mb-5 bg-white rounded" >
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4 style="text-align:center">Kayıt Ol</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label>Email</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Şifre</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Şifre Doğrula</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-block btn-info">Kaydol</button>
            <br />
            <div class="form-group">
                <p>
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Zaten bir hesabınız var mı? Giriş yap</a>
                </p>
                </div>
        </form>
    </div>
    </div>
   

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
